//? Solution:

const olympics = new Date('2025-07-25');

const us = new Intl.DateTimeFormat('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}).format(olympics);

const fr = new Intl.DateTimeFormat('fr-FR', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}).format(olympics);

const jp = new Intl.DateTimeFormat('ja-JP', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}).format(olympics);

console.log(us);                            // ğŸ‡ºğŸ‡¸ US: Friday, July 25, 2025
console.log(fr);                            // ğŸ‡«ğŸ‡· FR: vendredi 25 juillet 2025
console.log(jp);                            // ğŸ‡¯ğŸ‡µ JP: 2025å¹´7æœˆ25æ—¥é‡‘æ›œæ—¥


//? âœ… Bonus Solution:

const olympics5 = new Date('2025-07-25')

function formatEventDate(date, locale) {
    const options = {
        weekday: 'long',
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    };
    return new Intl.DateTimeFormat(locale, options).format(date);
};

console.log('US', formatEventDate(olympics5, 'en-US'));
console.log('FR', formatEventDate(olympics5, 'fe-FR'));
console.log('JP', formatEventDate(olympics5, 'ja-JP'));
